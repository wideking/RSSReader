<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_settings_edit_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_settings_edit_feed_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.87"

        android:fontFamily="Roboto Medium"
        android:gravity="center"
        android:padding="@dimen/padding_item"
        android:text="test"
        android:textColor="#000000"
        android:textSize="@dimen/font_list_description" />

    <EditText

        android:id="@+id/et_settings_edit_feed_settings"

        android:layout_width="@dimen/width_picture"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:alpha="0.87"
        android:fontFamily="Roboto Medium"
        android:gravity="center"
        android:inputType="number"
        android:padding="@dimen/padding_item"
        android:textColor="#000000"
        android:textSize="@dimen/font_list_description"

        />

    <Spinner

        android:id="@+id/spinner_settings_edit_feed_settings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_settings_edit_feed_settings"
        android:layout_toRightOf="@id/tv_settings_edit_feed_settings"
        android:alpha="0.87"
        android:fontFamily="Roboto Medium"
        android:gravity="center"
        android:padding="@dimen/padding_item"
        android:textColor="#000000"
        android:textSize="@dimen/font_list_description"

        />


</RelativeLayout>