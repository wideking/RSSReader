<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lv_settings_edit_sources_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_settings_edit_feed_source_name"
            android:layout_width="@dimen/width_picture"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_item"

            android:alpha="0.87"
            android:fontFamily="Roboto Medium"
            android:textColor="#000000"

            android:textSize="@dimen/font_list_description" />

        <EditText
            android:id="@+id/et_settings_edit_feed_source_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_item"
            android:alpha="0.87"
            android:fontFamily="Roboto Medium"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:textColor="#000000"
            android:textSize="@dimen/font_list_description"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_settings_edit_feed_source_url"
            android:layout_width="@dimen/width_picture"
            android:layout_height="wrap_content"

            android:layout_margin="@dimen/padding_item"
            android:alpha="0.87"
            android:fontFamily="Roboto Medium"
            android:textColor="#000000"
            android:textSize="@dimen/font_list_description" />

        <TextView
            android:id="@+id/tv_settings_edit_feed_source_url_value"

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_item"
            android:alpha="0.87"
            android:fontFamily="Roboto Medium"
            android:textColor="#000000"
            android:textSize="@dimen/font_list_description"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_settings_edit_feed_source_category"
            android:layout_width="@dimen/width_picture"
            android:layout_height="wrap_content"

            android:layout_margin="@dimen/padding_item"
            android:alpha="0.87"
            android:fontFamily="Roboto Medium"
            android:textColor="#000000"
            android:textSize="@dimen/font_list_description" />

        <AutoCompleteTextView
            android:id="@+id/actv_settings_edit_feed_source_category"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_item"
            android:alpha="0.87"
            android:fontFamily="Roboto Medium"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:textColor="#000000"
            android:textSize="@dimen/font_list_description" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_settings_edit_feed_source_use_feed"
            android:layout_width="@dimen/width_picture"
            android:layout_height="wrap_content"

            android:layout_margin="@dimen/padding_item"
            android:alpha="0.87"
            android:fontFamily="Roboto Medium"
            android:textColor="#000000"
            android:textSize="@dimen/font_list_description" />

        <CheckBox

            android:id="@+id/cb_settings_edit_feed_source_use_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_item"
            android:alpha="0.87"
            android:fontFamily="Roboto Medium"
            android:textColor="#000000"
            android:textSize="@dimen/font_list_description" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button

            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bt_settings_edit_sources_text" />

        <Button

            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bt_settings_edit_sources_delete" />

    </LinearLayout>


</LinearLayout>